{
  "name": "tommy8699/superfaktura-core",
  "description": "Production-ready, framework-agnostic PHP client for SuperFaktura API (invoices, payments, downloads).",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.8|^7.9|^8.0",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0|^2.0",
    "psr/log": "^1.0|^2.0|^3.0",
    "ramsey/uuid": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "Tommy8699\\SuperFaktura\\Core\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse",
    "fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --using-cache=no --verbose",
    "check": [
      "@stan",
      "@test"
    ]
  }
}