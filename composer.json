{
  "name": "tommy8699/superfaktura-core",
  "description": "Production-ready, framework-agnostic PHP client for SuperFaktura API (invoices, payments, downloads).",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.8|^8.0",
    "psr/log": "^1.0|^2.0|^3.0",
    "ramsey/uuid": "^4.7",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Tommy8699\\SuperFaktura\\Core\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "monolog/monolog": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "cs": "php-cs-fixer fix --allow-risky=yes",
    "cs:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "test": "phpunit",
    "stan": "phpstan analyse"
  }
}
